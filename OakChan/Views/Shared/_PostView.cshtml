@model OakChan.Models.DB.Entities.Post

<div id="@($"post-{Model.Id}")" class="post">

    <div class="post-details" id="@($"details-{Model.Id}")">
        <span class="post-title">@Model.Subject</span>
        <span>@Model.Name</span>
        <span class="post__number" data-pid="@Model.Id">@Model.Id</span>
        <span>@Model.CreationTime.ToShortDateString()</span>
    </div>
    @if (Model.Image != null)
    {
        <div class="post__images">
            <div class="pots__image">
                <img src="~/res/img/@($"{Model.Image.Id}.{Model.Image.Type}")" class="post__image" />
            </div>
        </div>
    }

    <div class="post-message" id="@($"msg-{Model.Id}")" data-pid="@($"{Model.Id}")">
        <text>@Model.Message</text>
    </div>
</div>